<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accentPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:textColorPrimaryInverse">@color/darkGrey</item>
        <item name="android:textColorSecondaryInverse">@color/darkGrey</item>
        <item name="android:spinnerItemStyle">@style/SpinnerStyle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_keyboard_backspace_grey600_24dp</item>
        <item name="pstsDividerColor">@color/primary</item>
        <item name="pstsIndicatorColor">@color/accentPrimary</item>
        <item name="pstsUnderlineColor">@color/accentPrimary</item>
        <item name="pstsUnderlineHeight">0dp</item>
        <item name="pstsTextAllCaps">true</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsIndicatorHeight">6dp</item>
    </style>

    <style name="AppTheme.Transparent" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ChartSummaryText">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/chart_summary_text_size</item>
    </style>

    <style name="SearchResultsText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="HelperCardText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@drawable/help_card_btn_txt_color</item>
    </style>
</resources>
