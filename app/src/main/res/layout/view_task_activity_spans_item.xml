<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/textLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/task_activity_span_item_padding"
        android:layout_marginLeft="@dimen/task_activity_date_text_margin"
        android:layout_marginRight="@dimen/task_activity_date_text_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView"
            android:textColor="@color/calendar_date_text"
            android:textSize="@dimen/task_activity_date_text_size"
            android:includeFontPadding="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weekDayTextView"
            android:textColor="@color/calendar_date_text"
            android:textSize="@dimen/task_activity_weekday_text_size"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <com.simbirsoft.timemeter.ui.views.TaskActivityItemsLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/taskActivityItemsLayout"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textLayout"
        android:layout_toRightOf="@+id/textLayout"/>
</RelativeLayout>